<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:onClick="handlePersonItemClick"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        >

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="0"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            app:srcCompat="@drawable/icon_shephard_profile_round"
            />

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Frans"
                android:textAppearance="@style/HeaderText"
                style="@style/HeaderTextStyle"
                />

            <TextView
                android:id="@+id/orderBami"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1 Bami, 2 Broodje Bami"
                style="@style/OrderTextStyle"
                />
            <TextView
                android:id="@+id/orderFrikandel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 Frikandel, 3 Broodjes Frikandel"
                style="@style/OrderTextStyle"
                />
            <TextView
                android:id="@+id/orderKroket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4 Kroket, 5 Broodje Kroket"
                style="@style/OrderTextStyle"
                />

            <GridLayout
                android:id="@+id/extra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:columnCount="4"
                >

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:text="Bami"
                    android:textAppearance="@style/SmallText"
                    />

                <Button
                    android:id="@+id/bamiPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:onClick="handleAddBami"
                    style="@style/SmallButtonStyle"
                    />

                <Button
                    android:id="@+id/bamiMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:onClick="handleRemoveBami"
                    style="@style/SmallButtonStyle"
                    />

                <TextView
                    android:id="@+id/bamiCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:text="0"
                    android:textAppearance="@style/SmallText"
                    />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:text="Broodje Bami"
                    android:textAppearance="@style/SmallText"
                    />

                <Button
                    android:id="@+id/brBamiPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:onClick="handleAddBroodjeBami"
                    style="@style/SmallButtonStyle"
                    />

                <Button
                    android:id="@+id/brBamiMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:onClick="handleRemoveBroodjeBami"
                    style="@style/SmallButtonStyle"
                    />

                <TextView
                    android:id="@+id/brBamiCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:text="0"
                    android:textAppearance="@style/SmallText"
                    />

                <TextView
                    android:id="@+id/snackTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:text="Frikandel"
                    android:textAppearance="@style/SmallText"
                    />

                <Button
                    android:id="@+id/frikandelPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:onClick="handleAddFrikandel"
                    style="@style/SmallButtonStyle"
                    />

                <Button
                    android:id="@+id/frikandelMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:onClick="handleRemoveFrikandel"
                    style="@style/SmallButtonStyle"
                    />

                <TextView
                    android:id="@+id/frikandelCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:text="0"
                    android:textAppearance="@style/SmallText"
                    />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:text="Broodje Frikandel"
                    android:textAppearance="@style/SmallText"
                    />

                <Button
                    android:id="@+id/brFrikandelPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:onClick="handleAddBroodjeFrikandel"
                    style="@style/SmallButtonStyle"
                    />

                <Button
                    android:id="@+id/brFrikandelMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:onClick="handleRemoveBroodjeFrikandel"
                    style="@style/SmallButtonStyle"
                    />

                <TextView
                    android:id="@+id/brFrikandelCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:text="0"
                    android:textAppearance="@style/SmallText"
                    />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:text="Kroket"
                    android:textAppearance="@style/SmallText"
                    />

                <Button
                    android:id="@+id/kroketPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:onClick="handleAddKroket"
                    style="@style/SmallButtonStyle"
                    />

                <Button
                    android:id="@+id/kroketMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:onClick="handleRemoveKroket"
                    style="@style/SmallButtonStyle"
                    />

                <TextView
                    android:id="@+id/kroketCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:text="0"
                    android:textAppearance="@style/SmallText"
                    />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:text="Broodje Kroket"
                    android:textAppearance="@style/SmallText"
                    />

                <Button
                    android:id="@+id/brKroketPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:onClick="handleAddBroodjeKroket"
                    style="@style/SmallButtonStyle"
                    />

                <Button
                    android:id="@+id/brKroketMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:onClick="handleRemoveBroodjeKroket"
                    style="@style/SmallButtonStyle"
                    />

                <TextView
                    android:id="@+id/brKroketCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:text="0"
                    android:textAppearance="@style/SmallText"
                    />

            </GridLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
